<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UIAppDesign" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>
    <style name="Text">
        <item name="android:fontFamily">@font/poppins_basic</item>
        <item name="android:textColor">#000000</item>
    </style>

<!--    <style name="Text.Title">-->
<!--        <item name="fontFamily">@font/playfairdisplay_medium</item>-->
<!--        <item name="android:textSize">20sp</item>-->
<!--    </style>-->

    <style name="Text.Header">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body.SemiBold">
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.ExtraSmall">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">300dp</item>
    </style>
</resources>